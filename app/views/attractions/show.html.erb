<div class='center'>
  <div class='info' >
    <p><strong>Name:</strong> <%= @attraction.name %></p>
    <p><strong>Total Number of Users:</strong> <%= @attraction.users_count %></p>
    <p><strong>Nbr Ticket Requirement:</strong><%= @attraction.tickets %></p>
    <p><strong>Height Requirement:</strong> <%= @attraction.min_height %>inches</p>
    <p><strong>Nausea Rating:</strong><%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating:</strong><%= @attraction.happiness_rating %></p>
    <% if @current_user.admin %>
      <p><%= link_to 'Edit Attraction', edit_attraction_path(@attraction)  %></p>
    <% else %>
      <%= form_for :ride, url: '/rides/new' do |f| %>
        <%= f.hidden_field :user_id, value: "#{@current_user.id}" %>
        <%= f.hidden_field :attraction_id, value: "#{@attraction.id}" %>
        <%= f.submit 'Go on this ride', class: 'btn btn-light' %>
      <% end %>
    <% end %>
  </div>
</div>